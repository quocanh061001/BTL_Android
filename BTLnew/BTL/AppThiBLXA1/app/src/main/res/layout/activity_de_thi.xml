<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeThi">

    <Button
        android:id="@+id/btnDe3"
        android:layout_width="170dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:text="Đề 3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDe1" />

    <Button
        android:id="@+id/btnDe4"
        android:layout_width="163dp"
        android:layout_height="72dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="28dp"
        android:text="Đề 4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDe2" />

    <Button
        android:id="@+id/btnDe1"
        android:layout_width="162dp"
        android:layout_height="68dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="116dp"
        android:text="Đề 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/btnDe2"
        android:layout_width="169dp"
        android:layout_height="70dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="28dp"
        android:text="Đề 2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icondethi"
        tools:srcCompat="@drawable/icondethi" />
</androidx.constraintlayout.widget.ConstraintLayout>